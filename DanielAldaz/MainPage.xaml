<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DanielAldaz.MainPage">

    <StackLayout>

        <Label Text="Registro de Pagos" FontSize="Title" Padding="30,10,30,10" HorizontalOptions="CenterAndExpand"/>

        <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"/>

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Text="Usuario" Grid.Row="0" Grid.Column="0"/>
            <Entry x:Name="txt_user" Placeholder="Usuario" Grid.Row="0" Grid.Column="1"/>

            <Label Text="Contraseña" Grid.Row="1" Grid.Column="0"/>
            <Entry x:Name="txt_pass" Placeholder="Contraseña" IsPassword="True" Grid.Row="1" Grid.Column="1"/>

            <Button x:Name="but_login" Text="Iniciar Sesión" Grid.Row="2" Grid.Column="1" Clicked="but_login_Clicked"/>

        </Grid>

    </StackLayout>

</ContentPage>
